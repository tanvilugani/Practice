@model ModelBindingValidState.Models.Customer
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
@using (Html.BeginForm("Index", "Customer", "Post"))
{
    @Html.ValidationSummary()
    
    <body>
        <div>
            <table>
                <tr>
                    <td>
                        @Html.LabelFor(m => Model.Name)
                    </td>
                    <td>
                        @Html.TextBoxFor(m => Model.Name)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => Model.Address)
                    </td>
                    <td>
                        @Html.TextBoxFor(m => Model.Address)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(m => Model.Age)
                    </td>
                    <td>
                        @Html.TextBoxFor(m => Model.Age)
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input type="submit" value="Go" />
                    </td>
                </tr>
            </table>
        </div>
    </body>
}
</html>
